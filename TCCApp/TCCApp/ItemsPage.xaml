<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TCCApp.ItemsPage"
             xmlns:pancake="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView">




    <AbsoluteLayout BackgroundColor="#FFF9EE">

        <Label Text="Itens" FontAttributes="Bold" FontSize="30" AbsoluteLayout.LayoutBounds="42, 40, 68, 42"/>
        <Label FontAttributes="none" FontSize="16" AbsoluteLayout.LayoutBounds="42, 80, 258, 42"
               Text="Aqui você pode adicionar os itens que deseja comprar em grupo."/>

        <ScrollView AbsoluteLayout.LayoutBounds="0, 150, 411, 347">
            <FlexLayout x:Name="flex" Direction="row" WidthRequest="411"
                        HorizontalOptions="Center" Wrap="Wrap">

                <pancake:PancakeView WidthRequest="140" HeightRequest="155" CornerRadius="15" Margin="30">

                    <pancake:PancakeView.Shadow>
                        <pancake:DropShadow Color="LightGray" BlurRadius="8"/>
                    </pancake:PancakeView.Shadow>
                    <BoxView Color="#BDF5F5"/>
                    
                </pancake:PancakeView>

                <pancake:PancakeView WidthRequest="140" HeightRequest="155" CornerRadius="15" Margin="30">

                    <pancake:PancakeView.Shadow>
                        <pancake:DropShadow Color="LightGray" BlurRadius="8"/>
                    </pancake:PancakeView.Shadow>

                    <BoxView Color="#F5BDEF"/>
                </pancake:PancakeView>

                <pancake:PancakeView  WidthRequest="140" HeightRequest="155" CornerRadius="15" Margin="30">

                    <pancake:PancakeView.Shadow>
                        <pancake:DropShadow Color="LightGray" BlurRadius="8"/>
                    </pancake:PancakeView.Shadow>

                    <BoxView Color="#EDF5BD"/>
                </pancake:PancakeView>

            </FlexLayout>
        </ScrollView>

        <Button Text="Adicionar" BackgroundColor="#ECEE72" AbsoluteLayout.LayoutBounds="39, 520, 255, 60"
                 CornerRadius="15"/>

        <ImageButton Source="delete.png" AbsoluteLayout.LayoutBounds="308, 520, 60, 60" CornerRadius="15" Padding="10"
                     BackgroundColor="#F2A6A6"/>

    </AbsoluteLayout>
</ContentPage>