<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TCCApp.View.MapPage"
             xmlns:map="clr-namespace:Xamarin.Forms.GoogleMaps;assembly=Xamarin.Forms.GoogleMaps">

    <AbsoluteLayout>
        
        <map:Map x:Name="map" AbsoluteLayout.LayoutBounds="1,1,1,1"
                 AbsoluteLayout.LayoutFlags="All"/>
        
        <Frame AbsoluteLayout.LayoutBounds="0.10, 0.965, 250, 60"
               AbsoluteLayout.LayoutFlags="PositionProportional" CornerRadius="5"
               Opacity="0.8" >

            <Slider 
                Value="{Binding Raio}"
                Maximum="5000"
                Minimum="1000"
                MinimumTrackColor="Gray" 
                MaximumTrackColor="Gray"/>
            
        </Frame>
        
        <Button 
            x:Name="Search"
            AbsoluteLayout.LayoutBounds="0.84, 0.95, 80, 60"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            Text="Update"
            Clicked="Search_Clicked"/>
        
    </AbsoluteLayout>
</ContentPage>