<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TCCApp.View.ProfilePage"
             xmlns:pancake="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView">

    <ScrollView HeightRequest="850">

        <AbsoluteLayout BackgroundColor="#FFF8EA" HeightRequest="850">

            <Frame AbsoluteLayout.LayoutBounds="0, 0, 411, 250" Padding="0">
                <Image x:Name="image" Source="upload.png" Aspect="AspectFill"/>
            </Frame>

            <Frame 
                AbsoluteLayout.LayoutBounds="365, 10, 35, 35"
                Padding="0"
                CornerRadius="5">
                <ImageButton 
                    BackgroundColor="Transparent"
                    Source="settings.png"/>
            </Frame>

            <Frame AbsoluteLayout.LayoutBounds="320, 10, 35, 35" 
                   Padding="0"
                   CornerRadius="5">
                <ImageButton 
                Source="add.png" 
                AbsoluteLayout.LayoutBounds="300, 10, 35, 35"
                BackgroundColor="Transparent"
                Clicked="ImageButton_Clicked"/>
            </Frame>



            <Label 
                Text="fulanodetal@email.com" 
                FontAttributes="Bold" 
                AbsoluteLayout.LayoutBounds="120,190, 214, 21" 
                TextColor="White" 
                FontSize="18"/>

            <pancake:PancakeView AbsoluteLayout.LayoutBounds="13.5, 190, 386, 172" CornerRadius="20">

                <pancake:PancakeView.Shadow>
                    <pancake:DropShadow BlurRadius="2"/>
                </pancake:PancakeView.Shadow>

                <StackLayout Padding="25" BackgroundColor="White">

                    <StackLayout Orientation="Horizontal">

                        <Label 
                            Text="Sobre" 
                            FontAttributes="Bold" 
                            FontSize="16" 
                            VerticalOptions="Center"/>

                        <ImageButton 
                            Source="edit.png" 
                            WidthRequest="30" 
                            BackgroundColor="Transparent" 
                            Margin="250, 0, 0, 0"/>

                    </StackLayout>

                    <Label 
                        Text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. 
                        Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
                        FontSize="16"
                        Margin="0, 15, 0, 0"/>

                </StackLayout>

            </pancake:PancakeView>

            <pancake:PancakeView AbsoluteLayout.LayoutBounds="13.5, 385, 386, 370" CornerRadius="20">

                <pancake:PancakeView.Shadow>
                    <pancake:DropShadow BlurRadius="2" />
                </pancake:PancakeView.Shadow>

                <StackLayout BackgroundColor="White" Padding="25">

                    <StackLayout Orientation="Horizontal">

                        <Label 
                            Text="Notificações" 
                            FontAttributes="Bold" 
                            FontSize="16" 
                            VerticalOptions="Center" 
                            HorizontalOptions="Start"/>

                        <ImageButton 
                            Source="delete.png" 
                            BackgroundColor="Transparent"
                            WidthRequest="30"
                            Margin="200,0,0,0"/>

                    </StackLayout>

                </StackLayout>

            </pancake:PancakeView>

        </AbsoluteLayout>

    </ScrollView>
</ContentPage>